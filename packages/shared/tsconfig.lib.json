{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/shared",
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "noEmit": false
  },
  "include": ["src/**/*.ts"]
}
