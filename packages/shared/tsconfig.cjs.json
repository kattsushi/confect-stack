{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "types": ["node"],
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
